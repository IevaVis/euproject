<div id="comment-<%= comment.id %>">
<div class="comment-fix">
	<div class="row">
		<div class="col-md-8 offset-md-2 card card-body bg-light">
			<p><%= comment.body %></p>
			<p>
				<span class="quiet"><small>Created: <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.user.name %></small></span>
			</p>
			<% if signed_in? and current_user == comment.user %>
			<%= link_to 'Delete comment', chatroom_comment_path(@chatroom, comment), method: :delete, remote: true %>
			<% end %>
		</div>
	</div>
</div>
</div>
<br/>

		
