<div class="message-container">
	<div class="small text-muted message-info">[<%= message.message_time %>] <%= message.user.name %>:
	</div>
	<div class="message-body">
	<em><%= sanitize markdown_to_html(message.body) %></em>
</div>
	<% if message.files.attached? %>
		<% message.files.each do |file| %>
			 <%= link_to "View #{file.filename}", file %>
		<% end %>
	<% end %>
</div>
		
