<% obj.each do |diyproject| %>
	<div class="card card-body diy-card bg-light mb-3">
		<div class="clearfix">
			<div class="float-left col-md-8">
				<h4 class="card-title"><%= link_to diyproject.title.capitalize, diyproject_path(diyproject) %></h4>
					<p class="card-text"><%= truncate(diyproject.description.capitalize, length: 150) %></p>
					<p>
					<span class="quiet"><small><%= t(".activity_is_best_for") 
          %>: <em><%= t diyproject.place %></em><br/>
          <%= t(".best_suitable_for_kids_aged") %> : <em><%= t diyproject.age %></em></small></span>
        </p>
          <p class="text-muted">
          <small><%= diyproject.created_at.strftime('%d-%m-%Y') %> || <%= diyproject.user.name.capitalize %></small>
					</p>
      		<% if signed_in? && (current_user == diyproject.user) %>
      			<div class="diyproject-actions mb-3">
               <%= link_to t(".see_all_images"), diyproject_path(diyproject), class: "btn btn-sm btn-custom3" %>
      				<%= link_to t(".edit_project"), edit_diyproject_path(diyproject), class: "btn btn-sm btn-custom4" %>
         			<%= link_to t(".delete_project"), diyproject_path(diyproject), method: :delete, data: { confirm: "Are you sure you want to delete this activity?" }, class: "btn btn-sm btn-danger" %>
              <%= link_to t(".add_your_image"), diyproject_path(diyproject), class: "btn btn-sm btn-custom5" %> 
         		</div>
            <% elsif signed_in? %>
            <div class="diyproject-actions mb-3">
            <%= link_to t(".see_more_images"), diyproject_path(diyproject), class: "btn btn-sm btn-custom3" %>
              <%= link_to t(".add_your_image"), diyproject_path(diyproject), class: "btn btn-sm btn-custom5" %> 
            </div>
          <% end %>
          <div class="rating">
            <% if current_user %>
              <%= t (".rate_difficulty") %>
                <small class="text-muted">1 - very easy, 5 - very hard</small>
              <%= rating_for diyproject, "difficulty_degree" %>
            <% end %>
            <small class="text-muted">Total votes: <%= diyproject.rates("difficulty_degree").count %></small>
          </div>
        </div>
        <div class="float-right">
          <div class="diyproject-image">
            <a href="/diyprojects/<%= diyproject.id %>">
      	     <%= image_tag diyproject.images.first.variant(resize: "300x200").processed, class: "rounded" %>
            </a>
          </div>
        </div>
      </div>
		</div>
  <br/>
<% end %>