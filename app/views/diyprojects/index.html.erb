
<div class="container">	
	<%= will_paginate @diyprojects, list_classes: %w(pagination justify-content-center) %>
	<div class="row">
		<div class="col-md-9">
			<div class="row">
				<%= render 'diyproject', obj: @diyprojects %>
			</div>	
		</div>
		<div class="right-side col-md-3">
			<div class="row">
				<div class="newdiy-button col-md-12">
					<%= link_to t('.new_project'), new_diyproject_path, class: "btn btn-lg btn-custom3" %>
				</div>
			</div>
			<div class="row">
				<div class="diy-search-form col-md-12 ml-3">
    			<span class="search-form-title"><%= t ".search_diy" %>:</span><br/>
					<%= form_tag(diyprojects_path, method: "get") do %>
						<div class="diy-search-title">
      				<small><%= t ".place" %>:</small>
    				</div>
    				<div class="diy-search-options">
							<%= radio_button_tag(:place, ["indoors"]) %>
							<%= label_tag(:place, t('.indoors')) %><br/>
							<%= radio_button_tag(:place, ["outdoors"]) %>
							<%= label_tag(:place, t('.outdoors')) %><br/>
							<%= radio_button_tag(:place, ["indoors_and_outdoors"]) %>
							<%= label_tag(:place, t('.indoors_and_outdoors')) %>
						</div>
						<div class="diy-search-title">
							<small><%= t ".age" %>:</small><br/>
						</div>
						<div class="diy-search-options">
							<%= check_box_tag(:age, ["from_6_to_9"]) %>
							<%= label_tag(:age, t('.from_6_to_9')) %><br/>
							<%= check_box_tag(:age, ["from_10_to_12"]) %>
							<%= label_tag(:age, t('.from_10_to_12')) %><br/>
							<%= check_box_tag(:age, ["all_ages"]) %>
							<%= label_tag(:age, t('.all_ages')) %>
						</div>
						<div class="diy-search-submit">
							<%= submit_tag t(".submit"), :class => "btn btn-sm btn-outline-secondary" %>
							<%= link_to t(".clear"), diyprojects_path, class: "btn btn-sm btn-outline-warning" %>
						</div>
					</div>
				<% end %>
    	</div>

    	<div class="row">
    		<div class="card diy-tips col-md-12 ml-3 mb-2">
    			<div class="card-body">
              <small><p class="card-text text-muted"><%= t(".diy_tips")%></p></small><br/>
              <%= link_to "/assets/Tips.png", 'data-lightbox': 'image' do %>
              <img class="card img-bottom" src="/assets/Tips.png">
              <% end %>
              </img>
              <small><%= link_to t('.download_tips'), "/assets/Tips.png", download: '' %></small>
            </div>
    		</div>
    	</div>

  	</div>
	</div>
	<%= will_paginate @diyprojects, list_classes: %w(pagination justify-content-center) %>
</div>
