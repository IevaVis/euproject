
<div class="container">	
	<%= will_paginate @diyprojects, list_classes: %w(pagination justify-content-center) %>
	<div class="row">
		<div class="col-md-10">
			<div class="row">
				<%= render 'diyproject', obj: @diyprojects %>
			</div>	
		</div>
		<div class="right-side col-md-2">
			<div class="row">
				<div class="newdiy-button col-md-12">
					<%= link_to 'New Project', new_diyproject_path, class: "btn btn-lg btn-custom3" %>
				</div>
			</div>
			<div class="row">
				<div class="diy-search-form col-md-12 ml-3">
    			<span class="search-form-title">Search for DIY:</span><br/>
					<%= form_tag(diyprojects_path, method: "get") do %>
						<div class="diy-search-title">
      				<small>Place:</small>
    				</div>
    				<div class="diy-search-options">
							<%= radio_button_tag(:place, ["indoors"]) %>
							<%= label_tag(:place, "Indoors") %><br/>
							<%= radio_button_tag(:place, ["outdoors"]) %>
							<%= label_tag(:place, "Outdoors") %>
						</div>
						<div class="diy-search-title">
							<small>Age:</small><br/>
						</div>
						<div class="diy-search-options">
							<%= check_box_tag(:age, ["From 6 to 9"]) %>
							<%= label_tag(:age, "From 6 to 9") %><br/>
							<%= check_box_tag(:age, ["From 10 to 12"]) %>
							<%= label_tag(:age, "From 10 to 12") %><br/>
							<%= check_box_tag(:age, ["Other"]) %>
							<%= label_tag(:age, "Other") %>
						</div>
						<div class="diy-search-submit">
							<%= submit_tag("Search", :class => "btn btn-sm btn-outline-secondary") %>
							<%= link_to "Clear", diyprojects_path, class: "btn btn-sm btn-outline-warning" %>
						</div>
					</div>
				<% end %>
    	</div>

    	<div class="row">
    		<div class="card diy-tips col-md-12 ml-3">
    			<div class="card-body">
              <small><p class="card-text text-muted">Click on the image to get usefull tips about uploading a new DIY project</p></small><br/>
              <%= link_to "/assets/Tips.png", 'data-lightbox': 'image' do %>
              <img class="card img-bottom" src="/assets/Tips.png">
              <% end %>
              </img>
              <small><%= link_to 'Download tips', "/assets/Tips.png", download: '' %></small>
            </div>
    		</div>
    	</div>

  	</div>
	</div>
	<%= will_paginate @diyprojects, list_classes: %w(pagination justify-content-center) %>
</div>
