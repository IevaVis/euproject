<%= render 'shared/errors', obj: @diyproject %>

<div class="col-md-6 offset-md-3">
	<div class="diyupload-form">
		<h3><%= t ".title" %></h3><br/>
		<%= content_for(:the_links) do %>
    	<%= link_to t("the_links"), "#", data: {toggle: "modal", target: "#exampleModalLong"} %> 
			<% end %>
		<%= simple_form_for @diyproject, :html => { :multipart => true } do |f| %>
			<div class="form-inputs">
				<%= f.input :title, required: true, autofocus: true %>
				<%= f.input :description, as: :text, input_html: {rows: 5}, required: true %>
				<%= f.input :objective, as: :text, input_html: {rows: 3}, required: true %>
				<%= f.input :duration, required: true %>
				<%= f.input :materials, as: :text, input_html: {rows: 5}, required: true %>
				<%= f.input :results_and_tips, as: :text, input_html: {rows: 5}, required: true %>
				<%= f.input :links_and_resources, as: :text, input_html: {rows: 3}, required: true %>
				<%= f.input :tags, input_html: {value: f.object.tags.join(', ') || ''}, required: true %>
				<%= f.input :place, as: :radio_buttons, collection: [:indoors , :outdoors] %>
				<%= f.input :age, as: :radio_buttons, collection: [:from_6_to_9, :from_10_to_12, :all_ages ] %>
			<div class="mb-2">
				<%= f.file_field :images, multiple: true %>
			</div>
				<%= f.input :terms, as: :boolean, checked_value: true, unchecked_value: false, :label => content_for(:the_links) %>
			</div>
			<div class="form-actions">
				<%= f.button :submit, class: "btn-custom" %>
			</div>
		<% end %>
	</div>
</div>

<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Accept Terms of Use</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        1. I confirm that I have read, understand and agree to <%= link_to "Terms of use & Privacy policy", terms_path %> of this platform. 
        <br/>

				2. I agree that regarding the terms of using this platform, this information will be shared with other users for educational purposes and not commercial.
				<br/>

				3. I agree that regarding the terms of using this platform I am taking all responsibility for the uploaded content and used language.
				<br/>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>