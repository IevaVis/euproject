<div class="container-fluid">
	<div class="row">
		<div class="col-md-8">
			<div class="forum-title">
				<h3><span class="fas fa-folder-open"></span>Teacher Chat and Forum</h3>
			</div>
			<% @chatrooms.each do |chat| %>
				<div class="forum-post">
					<div class="clearfix">
						<% if signed_in? && current_user.teacher? %>
							<div class="post-body">
								<div class="col-md-8 float-left">
		 							<h6 class="post-title"><span class="fa fa-comments">
		 							</span><%= link_to chat.title, chatroom_path(chat) %>
		 							<span class="comments-count"><%= link_to pluralize(chat.comments.count, 'comment'), chatroom_path(chat) %></span></h6>
		 							<div class="post-description">
		 								<%= truncate(chat.description, length: 200) %>
		 							</div>
		 						</div>
		 						<div class="col-md-4 float-right">
		 							<div class="time-created">
										Created <%= time_ago_in_words(chat.created_at) %> ago by:
										</div> 
										<div class="chat-owner-info">
											<span class="far fa-envelope"></span><%= link_to(chat.user.name.capitalize, user_path(chat.user_id), class: "chat-owner") %>
											<div class="chat-owner-country">
											Country: <%= chat.user.country %>
										</div>
										<div class="chat-owner-registration">
											Joined: <%= chat.user.created_at.strftime("%d/%m/%Y") %>
										</div>
 										</div>
								</div>
		 					</div>
		 			</div>
		 		</div>
		    <% end %>
		  	<% end %>
		</div>
		<div class="chat-form col-md-4">
       <%= render 'form' %>
    </div>
	</div>
</div>








	

		
		


